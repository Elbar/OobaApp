<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kg.vista.ooba">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.activity.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.Main2Activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ShopActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.NotificationActivity" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity android:name=".ui.activity.WelcomeActivity" />
        <activity
            android:name=".ui.activity.PartnerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.MailForwardingActivity" />
        <activity android:name=".ui.activity.MailForwardingInfoActivity" />
        <activity
            android:name=".ui.activity.ProductCartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.BasketOrderActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.activity.CatalogActivity"
            android:label="@string/catalog"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.ShopInDetailActivity"
            android:label="@string/catalog"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.ProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".ui.activity.DiscountActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>