<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kg.vista.ooba">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ShopActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.NotificationActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity android:name=".activities.WelcomeActivity" />
        <activity
            android:name=".activities.UserDetailsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.SecurityActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.PostSettingsActivity" />
        <activity android:name=".activities.DiscountActivity" />
        <activity android:name=".activities.PaymentsActivity" />
        <activity android:name=".activities.PaymentsStatusActivity" />
        <activity android:name=".activities.BalanceActivity" />
        <activity
            android:name=".activities.ProductActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.PartnerInfoActivity" />
        <activity
            android:name=".activities.PartnerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.MailForwardingActivity" />
        <activity android:name=".activities.MailForwardingInfoActivity" />
        <activity
            android:name=".activities.ProductCartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BasketOrderActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.GroupOnActivity"
            android:label="@string/title_activity_group_on"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.GroupInfoActivity" />
        <activity android:name=".activities.MessNotifActivity"></activity>
    </application>

</manifest>