<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vybor_dostavki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/variant_dostavki"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

        <ListView
            android:id="@+id/lvShippingRadio"
            android:layout_below="@+id/vybor_dostavki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address_dostavki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvShippingRadio"
        android:layout_marginTop="15dp"
        android:text="Адрес доставки"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

        <ListView
            android:layout_below="@+id/address_dostavki"
            android:id="@+id/lvAddressRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveMData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvAddressRadio"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>