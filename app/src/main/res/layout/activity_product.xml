<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:piv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f4fd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />
        <!-- default -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="-26.0dip"
            android:background="@drawable/roundborder"
            android:orientation="vertical"
            android:padding="8.0dip">

            <TextView
                android:padding="16dp"
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="8.0dp"
                android:textColor="#000000"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/artikul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dp"
                android:text="Артикул: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dp"
                android:text="В наличии: "
                android:textColor="#000000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dip"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="8.0dp"
                android:text="9999 сом"
                android:textColor="#ff0054"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56.0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8.0dip">

                <Button
                    android:id="@+id/buyButton_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_solid"
                    android:fontFamily="sans-serif-medium"
                    android:text="В корзину"
                    android:textColor="@color/white"
                    android:textAllCaps="true" />

                <Button
                    android:background="@drawable/rounded_corner_line"
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Like"
                    android:textAllCaps="true"
                    android:textColor="@color/text_black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/roundborder"
            android:orientation="vertical"
            android:padding="8.0dip"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginTop="8.0dip"
                android:drawablePadding="16.0dip"
                android:text="Описание и характеристики"
                android:textColor="#000000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dip"
                android:background="#cccccc" />
            <!--<TextView android:id="@+id/properties" android:textColor="#000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="12.0dip" android:layout_marginRight="12.0dip" android:layout_marginBottom="16.0dip" android:layout_marginTop="8.0dp" android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua" />-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:id="@+id/properties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonProductDescription"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="fill_parent"
                android:layout_height="36.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/button_border_selector"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:text="Описание товара"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/roundborder"
            android:orientation="vertical"
            android:padding="8.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginTop="8.0dip"
                android:drawablePadding="16.0dip"
                android:text="Продавец"
                android:textColor="#000000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginBottom="4.0dp"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dip"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/tv_seller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="8.0dp"
                android:text="Продавец: "
                android:textColor="#000000" />
            <!--<TextView android:textColor="#000000" android:id="@+id/seller_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="12.0dip" android:layout_marginRight="12.0dip" android:layout_marginBottom="8.0dip" android:layout_marginTop="8.0dp" android:drawableLeft="@drawable/ic_email_black_24dp_wrapped" android:drawablePadding="16.0dip" android:text="Seller name" />-->

            <TextView
                android:id="@+id/tv_product_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:drawablePadding="16.0dip"
                android:text="Место: "
                android:textColor="#000000" />
        </LinearLayout>
        <!-- itemlist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/roundborder"
            android:orientation="vertical"
            android:padding="8.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginTop="8.0dip"
                android:drawablePadding="16.0dip"
                android:text="Другие товары продавца"
                android:textColor="#000000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginBottom="4.0dp"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="4.0dip"
                android:background="#cccccc" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_other_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
