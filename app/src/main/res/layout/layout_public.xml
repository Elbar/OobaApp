<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@id/public_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/public_iv"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="350dp">
            </ImageView>

            <TextView
                android:id="@id/public_good_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/public_iv"
                android:padding="8dp"
                android:text="Center"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@id/public_good_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/public_good_title_tv"
                android:gravity="left"
                android:padding="8dp"
                android:maxLines="2"
                android:text="Описание товара" />


            <TextView
                android:id="@id/public_good_agotime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/public_good_info_tv"
                android:gravity="left"
                android:drawableLeft="@drawable/ic_clock"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:maxLines="2"
                android:text="7 дней назад" />

            <TextView
                android:id="@id/public_good_views_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/public_good_info_tv"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_eye"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:maxLines="2"
                android:text="79" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
